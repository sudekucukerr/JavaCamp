
public class MükemmelSayi {

	public static void main(String[] args) {
		//Bölünenlerinin toplamı kendisine eşit olan sayılar mükemmel sayılardır. örn: 6-->1,2,3 1+2+3 = 6 ve 6 mükemmel bir sayıdır.
		
		int number = 28;
		
		int total = 0;
		
		for(int i=1 ; i<number ; i++) {
			if(number % i ==0) {
				total = total + i;
			}
		}
		
		if(total == number) {
			System.out.println("Mükemmel sayıdır.");
		} else {
			System.out.println("Mükemmel sayı değildir.");
		}

	}

}
